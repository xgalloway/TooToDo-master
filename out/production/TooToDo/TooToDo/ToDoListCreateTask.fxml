<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="TooToDo.ToDoListController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          stylesheets="/TooToDo/styleSheet.css">

    <Label style="-fx-font: NORMAL 20 Tahoma;" text = "Please Create Your Task:"
           GridPane.columnIndex = "0" GridPane.rowIndex = "0"
           GridPane.columnSpan="4">
    </Label>

    <Text text = "Name:"
          GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id = "nameField"
          GridPane.columnIndex="1" GridPane.rowIndex="1"
          GridPane.columnSpan="2"/>

    <Text text = "Date:"
          GridPane.columnIndex="0"  GridPane.rowIndex="2"/>
    <TextField fx:id = "dateField"
               GridPane.columnIndex="1" GridPane.rowIndex="2"
               GridPane.columnSpan="2"/>

    <Text text = "Task Notes:"
          GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id = "notesField"
               GridPane.columnIndex="0" GridPane.rowIndex="4"
                GridPane.columnSpan="4"/>

    <HBox GridPane.columnIndex="1" GridPane.rowIndex="5"
          alignment="BASELINE_CENTER">
        <Button text = "Create Task" GridPane.columnIndex="0" GridPane.rowIndex="0"
                onAction="#handleCreateTaskButton"/>
    </HBox>

</GridPane>